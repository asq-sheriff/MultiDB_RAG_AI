{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Consent Profile",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string"
    },
    "outreach_channels": {
      "type": "object",
      "properties": {
        "sms_ok": {
          "type": "boolean"
        },
        "phone_ok": {
          "type": "boolean"
        },
        "email_ok": {
          "type": "boolean"
        },
        "push_ok": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "escalation_contacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "relation": {
            "type": "string"
          },
          "channel": {
            "enum": [
              "sms",
              "phone",
              "email"
            ]
          },
          "value": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        },
        "required": [
          "name",
          "channel",
          "value"
        ],
        "additionalProperties": false
      }
    },
    "providers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "channel": {
            "enum": [
              "phone",
              "email",
              "portal"
            ]
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "role"
        ],
        "additionalProperties": false
      }
    },
    "allowed_disclosures": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "jurisdiction": {
      "type": "string"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "user_id",
    "outreach_channels"
  ],
  "additionalProperties": false
}